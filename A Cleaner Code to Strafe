int strafedrive

void updateDriveMotors (positive,negative)
  {
    motor[top_right_drive_motor] = positive
    motor[top_left_drive_motor] = positive
    motor[bottom_left_drive_motor] = negative
    motor[bottom_left_drive_motor] = negative
  }
if (abs(strafeDrive) > DEADZONE) 
  {
    updateDriveMotors (strafeDrive, strafeDrive)
  }
